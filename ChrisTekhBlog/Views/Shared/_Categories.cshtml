
@model IList<ChrisTekhBlog.Core.Objects.Category>

<div>

    @if (Model.Count > 0)
    {
      
            foreach (var category in Model)
            {
               <a href="~/Category/@category.UrlSlug">@category.Name</a><text>, &nbsp;</text>
            }
        
    }
    else
    {
        <p>No categories found!</p>
    }
</div>